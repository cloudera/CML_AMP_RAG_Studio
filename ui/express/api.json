{
  "openapi": "3.1.0",
  "info": {
    "title": "FastAPI",
    "version": "0.1.0"
  },
  "paths": {
    "/rag-studio/api/v1/sessions/{session_id}/chat": {
      "post": {
        "tags": [
          "Sessions"
        ],
        "summary": "Chat with your documents in the requested session",
        "operationId": "chat_sessions__session_id__chat_post",
        "parameters": [
          {
            "name": "session_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "title": "Session Id"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RagStudioChatRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RagStudioChatMessage"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Evaluation": {
        "properties": {
          "name": {
            "type": "string",
            "enum": [
              "relevance",
              "faithfulness"
            ],
            "title": "Name"
          },
          "value": {
            "type": "number",
            "title": "Value"
          }
        },
        "type": "object",
        "required": [
          "name",
          "value"
        ],
        "title": "Evaluation"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "RagMessage": {
        "properties": {
          "user": {
            "type": "string",
            "title": "User"
          },
          "assistant": {
            "type": "string",
            "title": "Assistant"
          }
        },
        "type": "object",
        "required": [
          "user",
          "assistant"
        ],
        "title": "RagMessage"
      },
      "RagPredictConfiguration": {
        "properties": {
          "exclude_knowledge_base": {
            "anyOf": [
              {
                "type": "boolean"
              },
              {
                "type": "null"
              }
            ],
            "title": "Exclude Knowledge Base",
            "default": false
          },
          "use_question_condensing": {
            "anyOf": [
              {
                "type": "boolean"
              },
              {
                "type": "null"
              }
            ],
            "title": "Use Question Condensing",
            "default": true
          },
          "use_hyde": {
            "anyOf": [
              {
                "type": "boolean"
              },
              {
                "type": "null"
              }
            ],
            "title": "Use Hyde",
            "default": false
          }
        },
        "type": "object",
        "title": "RagPredictConfiguration"
      },
      "RagPredictSourceNode": {
        "properties": {
          "node_id": {
            "type": "string",
            "title": "Node Id"
          },
          "doc_id": {
            "type": "string",
            "title": "Doc Id"
          },
          "source_file_name": {
            "type": "string",
            "title": "Source File Name"
          },
          "score": {
            "type": "number",
            "title": "Score"
          }
        },
        "type": "object",
        "required": [
          "node_id",
          "doc_id",
          "source_file_name",
          "score"
        ],
        "title": "RagPredictSourceNode"
      },
      "RagStudioChatMessage": {
        "properties": {
          "id": {
            "type": "string",
            "title": "Id"
          },
          "source_nodes": {
            "items": {
              "$ref": "#/components/schemas/RagPredictSourceNode"
            },
            "type": "array",
            "title": "Source Nodes"
          },
          "inference_model": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Inference Model"
          },
          "rag_message": {
            "$ref": "#/components/schemas/RagMessage"
          },
          "evaluations": {
            "items": {
              "$ref": "#/components/schemas/Evaluation"
            },
            "type": "array",
            "title": "Evaluations"
          },
          "timestamp": {
            "type": "number",
            "title": "Timestamp"
          }
        },
        "type": "object",
        "required": [
          "id",
          "source_nodes",
          "inference_model",
          "rag_message",
          "evaluations",
          "timestamp"
        ],
        "title": "RagStudioChatMessage"
      },
      "RagStudioChatRequest": {
        "properties": {
          "query": {
            "type": "string",
            "title": "Query"
          },
          "configuration": {
            "anyOf": [
              {
                "$ref": "#/components/schemas/RagPredictConfiguration"
              },
              {
                "type": "null"
              }
            ]
          }
        },
        "type": "object",
        "required": [
          "query"
        ],
        "title": "RagStudioChatRequest"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}